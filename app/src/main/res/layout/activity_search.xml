<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.nuc.vincent.com.todaynews.SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mainColor"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/search_back"
            android:layout_marginTop="6dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_white_btn_back_24dp" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_toRightOf="@+id/search_back"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/ic_search_icon"
            android:drawablePadding="8dp"
            android:background="@drawable/textview_border"
            android:hint="搜索你想知道的"/>

        <TextView
            android:id="@+id/text_search"
            android:layout_toRightOf="@+id/search_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="18sp">

        </TextView>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
